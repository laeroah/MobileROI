= form_for @page, :html => {:multipart => true} do |f|
  - if @page.errors.any?
    #error_explanation
      h2 = "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      ul
        - @page.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :project
    = f.text_field :project
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :width
    = f.number_field :width
  .field
    = f.label :image
    = f.file_field :image
  .field
    = f.label :height
    = f.number_field :height
  .actions = f.submit
